{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploys an Azure Automation account with a runbook to manage service principals for the MSSP."
  },
  "parameters": {
    "accountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the new automation account"
      },
      "defaultValue": "MSSP-Automation"
    },
    "rsocRunbookContentUri": {
      "type": "string",
      "metadata": {
        "description": "URI to the runbook content"
      },
      "defaultValue": "https://raw.githubusercontent.com/joelst/AzLighthouse/refs/heads/main/azure-automate/Update-MsspAppRegistrationCredential.ps1"
    },
    "rsocRunbookDescription": {
      "type": "string",
      "metadata": {
        "description": "Description of the runbook"
      },
      "defaultValue": "Runbook to manage service principal credentials for the MSSP"
    },
    "rsocRunbookName": {
      "type": "string",
      "metadata": {
        "description": "Name of the runbook"
      },
      "defaultValue": "Update-MsspAppRegistrationCredential"
    },
    "connectorRunbookContentUri": {
      "type": "string",
      "metadata": {
        "description": "URI to the runbook content"
      },
      "defaultValue": "https://raw.githubusercontent.com/joelst/AzLighthouse/refs/heads/main/azure-automate/Get-MsspDataConnectorStatus.ps1"
    },
    "connectorRunbookDescription": {
      "type": "string",
      "metadata": {
        "description": "Description of the runbook"
      },
      "defaultValue": "Runbook to report the data connector status for the MSSP"
    },
    "connectorRunbookName": {
      "type": "string",
      "metadata": {
        "description": "Name of the runbook"
      },
      "defaultValue": "Get-MsspDataConnectorStatus"
    },
    "userAssignedIdentityName": {
      "type": "string",
      "metadata": {
        "description": "User assigned identity name"
      },
      "defaultValue": "MSSP-Sentinel-Ingestion-UMI"
    },
    "userAssignedIdentityLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for user assigned managed identity"
      }
    },
    "umiClientId": {
      "type": "string",
      "metadata": {
        "description": "User managed identity client GUID"
      },
      "defaultValue": "\"xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx\""
    },
    "umiResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource group where the user managed identity is located"
      },
      "defaultValue": "\"*-Sentinel-Prod\""
    },
    "secretsLogicAppUri": {
      "type": "string",
      "metadata": {
        "description": "Secrets Logic App URI"
      },
      "defaultValue": "\"https://logicapp.azure.com/\""
    },
    "appReg": {
      "type": "string",
      "metadata": {
        "description": "Sentinel ingestion app registration (service principal) name"
      },
      "defaultValue": "\"MSSP-Sentinel-Ingestion\""
    },
    "sentinelResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource group where the Sentinel workspace is located"
      },
      "defaultValue": "\"*-Sentinel-Prod\""
    },    
    "sentinelWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Sentinel Log Analytics workspace name"
      },
      "defaultValue": "\"*-Sentinel\""
    },
    "dataConnectorLogicAppUri": {
      "type": "string",
      "metadata": {
        "description": "Data connector Logic App URI"
      },
      "defaultValue": "\"https://logicapp.azure.com/\""
    }
  },
  "variables": {
    "pwshRuntimeName": "PowerShell_74_Plus",
    "runbookScheduleName": "SP_daily_8am"
  },
  "resources": [
    {
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2023-11-01",
      "name": "[parameters('accountName')]",
      "location": "[parameters('userAssignedIdentityLocation')]",
      "tags": {},
      "identity": {
        "type": "SystemAssigned, UserAssigned",
        "userAssignedIdentities": {
          "[format('/subscriptions/{0}/resourceGroups/{1}/providers/Microsoft.ManagedIdentity/userAssignedIdentities/{2}', subscription().subscriptionId, parameters('umiResourceGroupName'), parameters('userAssignedIdentityName'))]": {}
        }
      },
      "properties": {
        "sku": {
          "name": "Basic"
        },
        "encryption": {
          "keySource": "Microsoft.Automation",
          "identity": {}
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runbooks",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}', parameters('accountName'), parameters('rsocRunbookName'))]",
      "location": "[resourceGroup().location]",
      "tags": {},
      "properties": {
        "runbookType": "PowerShell",
        "runtimeEnvironment": "[variables('pwshRuntimeName')]",
        "logProgress": false,
        "logVerbose": false,
        "description": "[parameters('rsocRunbookDescription')]",
        "publishContentLink": {
          "uri": "[parameters('rsocRunbookContentUri')]",
          "version": "1.0.0.0"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runbooks",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}', parameters('accountName'), parameters('connectorRunbookName'))]",
      "location": "[resourceGroup().location]",
      "tags": {},
      "properties": {
        "runbookType": "PowerShell",
        "runtimeEnvironment": "[variables('pwshRuntimeName')]",
        "logProgress": false,
        "logVerbose": false,
        "description": "[parameters('connectorRunbookDescription')]",
        "publishContentLink": {
          "uri": "[parameters('connectorRunbookContentUri')]",
          "version": "1.0.0.0"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Az.MonitoringSolutions', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Az.MonitoringSolutions/0.2.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.Users', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.Users/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.Authentication', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.Authentication/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.Applications', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.Applications/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.Users.Actions', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.Users.Actions/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.DirectoryObjects', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.DirectoryObjects/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments/packages",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}/Microsoft.Graph.Identity.DirectoryManagement', parameters('accountName'), variables('pwshRuntimeName'))]",
      "properties": {
        "contentLink": { "uri": "https://www.powershellgallery.com/api/v2/package/Microsoft.Graph.Identity.DirectoryManagement/2.30.0" }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runtimeEnvironments', parameters('accountName'), variables('pwshRuntimeName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/runtimeEnvironments",
      "apiVersion": "2024-10-23",
      "name": "[format('{0}/{1}', parameters('accountName'), variables('pwshRuntimeName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "runtime": {
          "language": "PowerShell",
          "version": "7.4"
        },
        "defaultPackages": {
          "az": "12.3.0",
          "azure cli": "2.64.0"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/schedules",
      "apiVersion": "2023-11-01",
      "name": "[format('{0}/{1}', parameters('accountName'), variables('runbookScheduleName'))]",
      "properties": {
        "startTime": "[dateTimeAdd(utcNow(), 'PT90M')]",
        "expiryTime": "9999-12-31T17:59:00-06:00",
        "interval": 1,
        "frequency": "Week",
        "timeZone": "America/Chicago",
        "advancedSchedule": {
          "weekDays": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/jobSchedules",
      "apiVersion": "2023-11-01",
      "name": "[format('{0}/{1}', parameters('accountName'), newGuid())]",
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/runbooks', parameters('accountName'), parameters('rsocRunbookName'))]",
        "[resourceId('Microsoft.Automation/automationAccounts/schedules', parameters('accountName'), variables('runbookScheduleName'))]"
      ],
      "properties": {
        "runbook": {
          "name": "[parameters('rsocRunbookName')]"
        },
        "schedule": {
          "name": "[variables('runbookScheduleName')]"
        }
      }
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/APP_REG_NAME')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('appReg')]",
        "description": "Name of the data ingestion app registration"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/SECRET_LA_URI')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('secretsLogicAppUri')]",
        "description": "URI for the secrets management Logic App"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/UMI_ID')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('umiClientId')]",
        "description": "User managed identity client GUID"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/DATACONNECTOR_LA_URI')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('dataConnectorLogicAppUri')]",
        "description": "Data collector Logic App URI"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
    "name": "[concat(parameters('accountName'), '/RESOURCE_GROUP_NAME')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('sentinelResourceGroupName')]",
        "description": "Name of the resource group where Sentinel workspace is located"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
    "name": "[concat(parameters('accountName'), '/UMI_RESOURCE_GROUP_NAME')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('umiResourceGroupName')]",
        "description": "Name of the user managed identity resource group"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/SUBSCRIPTION_ID')]",
      "properties": {
        "isEncrypted": false,
        "value": "[subscription().subscriptionId]",
        "description": "Azure subscription ID"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    },
    {
      "type": "Microsoft.Automation/automationAccounts/variables",
      "apiVersion": "2023-11-01",
      "name": "[concat(parameters('accountName'), '/WORKSPACE_NAME')]",
      "properties": {
        "isEncrypted": false,
        "value": "[parameters('SentinelWorkspaceName')]",
        "description": "Name of the Sentinel Log Analytics workspace"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Automation/automationAccounts', parameters('accountName'))]"
      ]
    }
  ]
}